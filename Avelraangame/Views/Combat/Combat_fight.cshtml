@{
    ViewData["Title"] = "Combat";
}

<br />
<p style="color:navajowhite">Combat</p>

<div id="modelJumbo" class="text-left jumbotron" style="opacity:0.7; background-color:black; color:navajowhite">
    <div class="container">
        <div class="row">
            <div id="attackerDiv" class="col"></div>
            <div id="defenderDiv" class="col"></div>
        </div>
    </div>
    <div id="generateFightBtns" class="btn-group-sm"> Generate NPC fight
        <button id="weak" class="btn btn-outline-dark">Weak</button>
        <button id="normal" class="btn btn-outline-dark">Normal</button>
        <button id="strong" class="btn btn-outline-dark">Strong</button>
    </div>

    <hr />

    <div id="combatants">
        <div class="container">
            <div class="row">
                <div id="goodGuys" class="col" style="border-color:steelblue; border-style:solid; border-radius:7px; padding:15px">
                </div>
                <div class="col col-2 text-center">
                    <div class="btn-group-vertical">
                        <button id="attackBtn" class="btn btn-outline-warning">Attack</button>
                        <button id="endTurnBtn" class="btn btn-outline-light">End turn</button>
                        <button id="endFightBtn" class="btn btn-outline-dark">End fight</button>
                    </div>
                </div>
                <div id="badGuys" class="col" style="border-color:dimgray; border-style:solid; border-radius:7px; padding:15px">
                </div>
            </div>
        </div>
    </div>

</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="~/js/combat/fight.js"></script>

