@{
    ViewData["Title"] = "Combat";
}

<br />
<p style="color:navajowhite">Fight</p>
<div class="btn-group">
    <a class="btn btn-outline-dark btn-sm" asp-controller="Combat" asp-action="Combat_index">Index</a>
    <a class="btn btn-outline-dark btn-sm" asp-controller="Combat" asp-action="Combat_fight">Fight</a>
    <a class="btn btn-outline-dark btn-sm" asp-controller="Combat" asp-action="Combat_quest">Quest</a>
</div>

<div id="modelJumbo" class="text-left jumbotron" style="opacity:0.7; background-color:black; color:navajowhite">

    <button id="lastActionResultBtn" title="Last action result info-bar" class="btn btn-block btn-outline-light disabled">Last action result</button>

    <hr />

    <div class="container">
        <div class="row">
            <div id="attackerDiv" class="col"></div>
            <div id="defenderDiv" class="col"></div>
        </div>
    </div>
    <div id="generateFightBtns" class="btn-group-sm"> Generate NPC fight
        <button id="weak" class="btn btn-outline-dark">Weak</button>
        <button id="normal" class="btn btn-outline-dark disabled">Normal</button>
        <button id="strong" class="btn btn-outline-dark disabled">Strong</button>
    </div>

    <hr />

    <div id="combatants">
        <div class="container">
            <div class="row">
                <div id="goodGuys" class="col" style="border-color:black; border-style:solid; border-radius:7px; padding:15px">
                </div>
                <div class="col col-2 text-center">
                    <div class="btn-group-vertical">
                        <button id="attackBtn" class="btn btn-outline-warning">Attack</button>
                        <button id="endTurnBtn" class="btn btn-outline-light">End turn</button>
                        <button id="endFightBtn" class="btn btn-outline-dark">End fight</button>
                    </div>
                </div>
                <div id="badGuys" class="col" style="border-color:black; border-style:solid; border-radius:7px; padding:15px">
                </div>
            </div>
        </div>
    </div>

</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="~/js/combat/fight.js"></script>

