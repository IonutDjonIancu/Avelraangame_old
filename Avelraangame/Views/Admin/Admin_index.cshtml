@{
    ViewData["Title"] = "Admin";
}

<br />
<p style="color:orangered">Admin</p>

<div id="modelJumbo" class="text-left jumbotron" style="opacity:0.7; background-color:black; color:navajowhite">
    <div>
        <button class="btn btn-block btn-info">Create Episode</button>
        <br />
        <div class="mb-3">
            <input type="text" class="form-control" id="episode_name_input" placeholder="name">
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" id="episode_date_input" placeholder="date">
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" id="episode_prologue_input" placeholder="prologue">
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" id="episode_epilogue_input" placeholder="epilogue">
        </div>
        <button id="save_epilogueBtn" class="btn btn-block btn-outline-success">Save</button>
    </div>

    <hr />

    <div>
        Create ACT
        <div class="mb-3">
            <input type="text" class="form-control" id="act_story_input" placeholder="story">
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" id="act_name_input" placeholder="name">
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" id="act_difficulty_input" placeholder="difficulty">
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" id="act_episode_input" placeholder="episode">
        </div>
        <button id="save_actBtn" class="btn btn-block btn-outline-success">Save</button>
    </div>

    <hr />



</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
