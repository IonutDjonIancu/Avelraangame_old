@{
    ViewData["Title"] = "Admin";
}

<br />
<p style="color:orangered">Admin</p>

<div id="modelJumbo" class="text-left jumbotron" style="opacity:0.7; background-color:black; color:navajowhite">
    <div>
        <div class="mb-3" style="width:250px">
            <input type="password" class="form-control" id="sigmaWard" placeholder="sigma ward">
        </div>
    </div>
    <hr />
    <div>
        Episode
        <br />
        <div class="mb-3">
            <input type="text" class="form-control" id="episode_name_input" placeholder="episode name">
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" id="episode_date_input" placeholder="episode date">
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" id="episode_prologue_input" placeholder="episode prologue">
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" id="episode_epilogue_input" placeholder="episode epilogue">
        </div>
        <div class="btn-group float-right">
            <button id="create_epilogueBtn" class="btn btn-sm btn-outline-success">Create Episode</button>
            <button id="update_epilogueBtn" class="btn btn-sm btn-outline-warning">Update Episode</button>
            <button id="delete_epilogueBtn" class="btn btn-sm btn-outline-danger">Delete Episode</button>
        </div>
    </div>

    <hr />
    <hr />

    <div>
        Act
        <div class="mb-3">
            <input type="text" class="form-control" id="act_story_input" placeholder="story">
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" id="act_name_input" placeholder="name">
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" id="act_difficulty_input" placeholder="difficulty">
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" id="act_episode_input" placeholder="episode">
        </div>
        <button id="save_actBtn" class="btn btn-sm btn-block btn-outline-success">Save Act</button>
    </div>

    <hr />



</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
